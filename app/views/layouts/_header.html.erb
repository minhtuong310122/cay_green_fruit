<header>
	<div class="navbar navbar-expand-lg navbar-light bg-dark navbar-dark">
		<div class="header">
			<%= link_to "Green Fruit", root_path, id: "logo" %>
			<div class="form-inline my-2 my-lg-0">
				<% if logged_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.fullname %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="dropdown-item"><%= link_to "Profile", current_user %></li>
              <li class="dropdown-item"><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li class="dropdown-item">
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <button class="btn btn-outline-info my-2 my-sm-0" type="submit">
	      	<%= link_to t(".text_header"), login_path %>
	      	</button>
	      	<button class="btn btn-outline-info my-2 my-sm-0" type="submit"><%= link_to t(".sign_up"), signup_path %></button>
        <% end %>
	      <button class="btn btn-outline-info my-2 my-sm-0" type="submit"><%= t ".text_header1" %> | 
	      	<i class="fa-solid fa-cart-shopping"></i></button>
	    </div>
    </div>
	</div>

	<div class="navbar navbar-expand-lg navbar-light bg-dark navbar-dark">
	  <div class="collapse navbar-collapse" id="navbarSupportedContent">
	    <ul class="navbar-nav mr-auto">
	      <li class="nav-item active">
	        <a class="nav-link" href="#"><%= t ".home" %><span class="sr-only">(current)</span></a>
	      </li>
	      <li class="nav-item active">
	        <a class="nav-link" href="#"><%= t ".shop" %></a>
	      </li>
	      <li class="nav-item active dropdown">
	        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
	          <%= t ".product" %>
	        </a>
	        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
	          <a class="dropdown-item" href="#"><%= t ".meat" %></a>
	          <a class="dropdown-item" href="#"><%= t ".fish" %></a>
	          <a class="dropdown-item" href="#"><%= t ".fruit" %></a>
	          <div class="dropdown-divider"></div>
	          <a class="dropdown-item" href="#"><%= t ".green" %></a>
	        </div>
	      </li>
	      <li class="nav-item active">
	        <a class="nav-link disabled" href="#"><%= t ".text_header2" %></a>
	      </li>
	      <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
            Language <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li class="dropdown-item"><%= link_to "English", locale: "en" %></li>
            <li class="dropdown-item"><%= link_to "Vietnamese", locale: "vi" %></li>
          </ul>
        </li>
	    </ul>
	    <form class="form-inline my-2 my-lg-0">
	      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
	      <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><%= t ".search" %></button>
	    </form>
	  </div>
	</div>
</header>
