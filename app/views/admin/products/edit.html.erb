<%= form_for :product, url: admin_product_path, method: :patch do |f| %>
  <div class="row" style="justify-content: center;">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group">
        Name: <%= f.text_field :name, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        Price: <%= f.text_field :price, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        Quantity: <%= f.text_field :quantity, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        Category:
        <%= f.select :category_id, Category.options_for_select, class: "form-control" %><br>
      </div>
      <div class="form-group">
        Description: <%= f.text_area :description, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        Image: <%= f.text_field :image, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        <%= f.submit %>
      </div>
<% end %>
