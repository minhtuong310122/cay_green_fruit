<%= form_for :category, url: admin_category_path, method: :patch do |f| %>
  <div class="row" style="justify-content: center;">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group">
        Name: <%= f.text_field :name %><br />
      </div>
      <div class="form-group">
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
