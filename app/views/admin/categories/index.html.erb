<p>Danh sach bai Categories</p>

<%= link_to "<button class='btn btn-outline-success'>Create New</button>".html_safe, new_admin_category_path %>

<table style="border-collapse: collapse;">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Action</th>
	</tr>
  <% @categories.map do |cate| %>
		<tr>
			<td><%= cate.id %></td>
			<td><%= cate.name %></td>
			<td>
				<%= link_to "<button class='btn btn-outline-info'>Edit</button>".html_safe,  edit_admin_category_path(nil, cate) %>
				<%= link_to "<button class='btn btn-outline-danger'>Delete</button>".html_safe, admin_category_path(nil, cate), method: :delete %>	
			</td>
		</tr>
	<% end %>
</table>
